<h3><a class="btn btn-secondary" href="/security">Create New</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Security List</h3>

<table class="table table-striped">

    <thead>

        <tr>

            <th>Date</th>

            <th>Open</th>

            <th>High</th>

            <th>Low</th>

            <th>Close</th>


        </tr>
        </thead>

    <tbody>

        {{#each list}}

        <tr>

            <td>{{this.Date}}</td>

            <td>{{this.Open}}</td>

            <td>{{this.High}}</td>

            <td>{{this.Low}}</td>

             <td>{{this.Close}}</td>

            <td>

                <a class="btn btn-primary btn-sm" href="/security/{{this._id}}">Edit</a>

                <a class="btn btn-danger btn-sm" href="/security/delete/{{this._id}}"

                  onclick="return confirm('Are you sure you want to delete this record ?');">Delete</a>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>
